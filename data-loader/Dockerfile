FROM ubuntu:20.04

ENV DEBIAN_FRONTEND=noninteractive

WORKDIR /app

# ðŸ”¹ Installer Java, unzip, curl et Python
RUN apt update && apt install -y \
    openjdk-8-jdk \
    unzip \
    curl \
    wget \
    python3 \
    python3-pip \
    procps \
    nano \
    dos2unix

# ðŸ”¹ Installer Kaggle CLI
RUN pip3 install kaggle

# ðŸ”¹ Variables pour Java
ENV JAVA_HOME=/usr/lib/jvm/java-8-openjdk-amd64
ENV PATH=$JAVA_HOME/bin:$PATH

# ðŸ”¹ PrÃ©parer les dossiers
RUN mkdir -p /datasets/text /datasets/images

# ðŸ”¹ Copier et corriger le script (conversion Windows->Linux)
COPY load_db_hdfs.sh ./load_db_hdfs.sh
RUN dos2unix ./load_db_hdfs.sh && chmod +x ./load_db_hdfs.sh

# ðŸ”¹ PrÃ©parer le dossier de configuration Kaggle
ENV KAGGLE_CONFIG_DIR=/root/.kaggle
RUN mkdir -p "$KAGGLE_CONFIG_DIR"

# ðŸ”¹ Corriger le problÃ¨me SERVER_PID
ENV SERVER_PID=""

CMD ["./load_db_hdfs.sh"]